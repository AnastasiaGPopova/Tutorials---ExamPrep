<main>
  <h1>{{currentCube.name}}</h1>
  <img class="cube" src="{{currentCube.imageUrl}}">
  <div class="details">
    <p><span>Description:</span>{{currentCube.description}}</p>
    <p><span>Difficulty level:</span> {{currentCube.difficultyLevel}}</p>
    <a class="btn" href="/">Back</a>
    {{#if isLogged}}
        <a class="btn" href="/cubes/{{currentCube._id}}/attach">Attach</a>
    {{/if}}
    {{#if isOwner}}
    <a class="btn" href="/cubes/{{currentCube._id}}/edit">Edit</a>
    <a class="btn" href="/cubes/{{currentCube._id}}/delete">Delete</a>
    {{/if}}
  </div>
  <h2>Accessories</h2>
  <div class="accessories">
    {{#each currentCube.accessories}}
    <div class="accessory">
      <img src={{this.imageUrl}} alt={{this.name}}>
      <h3>{{this.name}}</h3>
      <p>{{this.description}}/p>
    </div>

    {{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
    {{/each}}
  </div>
</main>